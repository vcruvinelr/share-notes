# Coolify Environment Variables Template
# Copy this file and configure in Coolify UI

# PostgreSQL
POSTGRES_USER=syncpad
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=syncpad

# MongoDB
MONGO_USER=syncpad
MONGO_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MONGO_DB=syncpad

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
KEYCLOAK_HOSTNAME=auth.yourdomain.com
KEYCLOAK_URL=https://auth.yourdomain.com
KEYCLOAK_REALM=syncpad
KEYCLOAK_CLIENT_ID=syncpad-backend
KEYCLOAK_CLIENT_SECRET=CHANGE_ME_CLIENT_SECRET

# Frontend Keycloak
VITE_KEYCLOAK_URL=https://auth.yourdomain.com
VITE_KEYCLOAK_REALM=syncpad
VITE_KEYCLOAK_CLIENT_ID=syncpad-frontend

# Backend API
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PRICE_ID=price_your_premium_monthly_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend
FRONTEND_URL=https://yourdomain.com
